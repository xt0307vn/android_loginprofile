<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:circularflow_defaultRadius="10dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00bcd4"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/ic_arrow_back"
                android:text="Back"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18dp"
                android:background="#00bcd4"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00BCD4"
                android:text="Profile"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.2"
                android:scaleX="1.2"
                android:layout_marginRight="10dp"
                android:background="#00BCD4"
                android:src="@drawable/setting" />

        </RelativeLayout>
        
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00bcd4">


        <FrameLayout
            android:id="@+id/avatar"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/profile_customborderavatar"
                android:src="@drawable/ic_baseline_person"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/profile_custombordercircle"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-45dp"
                android:layout_marginRight="-45dp"
                android:text="3"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </FrameLayout>

        <TextView
            android:id="@+id/profilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar"
            android:layout_marginTop="5dp"
            android:text="Nguyễn Xuân Trường"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_below="@+id/profilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="125"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="35sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Friends"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:layout_marginTop="-10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"/>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="250"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="35sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Followers"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:layout_marginTop="-10dp"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_customborderinput"
            android:layout_margin="30dp"
            android:layout_centerVertical="true"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email : xt0307@gmail.com"
                android:padding="15dp"
                android:textColor="#00bcd4"
                android:textSize="20sp"
                android:background="@null"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#00bcd4"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="#00bcd4"
                android:textSize="20sp"
                android:background="@null"
                android:text="phone : 0373210237"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#00bcd4"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="sky : no"
                android:layout_marginTop="-3dp"
                android:padding="15dp"
                android:textColor="#00bcd4"
                android:textSize="20sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#00bcd4"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="web : no"
                android:padding="15dp"
                android:textColor="#00bcd4"
                android:textSize="20sp"
                android:background="@null"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>